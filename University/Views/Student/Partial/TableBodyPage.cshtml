@model IEnumerable<University.Models.Student>

@{
    foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.Group.Name</td>
            <td>@student.Group.Course.Name</td>
            <td class="align-middle">
                <form asp-controller="Student" asp-action="EditPage" asp-route-id="@student.Id"
                      method="post">

                    <button type="submit" class="btn btn-warning">Edit</button>
                </form>
            </td>
            <td class="align-middle">
                <form asp-controller="Student" asp-action="RemoveStudent" asp-route-id="@student.Id"
                      method="post" data-ajax="true" data-ajax-update="#result">

                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
}