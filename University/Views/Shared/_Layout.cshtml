@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="course-dropdown" data-toggle="dropdown">Courses</a>
                        <div class="dropdown-menu" aria-labelledby="course-dropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="AddPage">Add course</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="ShowAllPage">Show all courses</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="group-dropdown" data-toggle="dropdown">Groups</a>
                        <div class="dropdown-menu" aria-labelledby="group-dropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="AddPage">Add group</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="ShowAllPage">Show all groups</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="student-dropdown" data-toggle="dropdown">Students</a>
                        <div class="dropdown-menu" aria-labelledby="student-dropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Student" asp-action="AddPage">Add student</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Student" asp-action="ShowAllPage">Show all students</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
