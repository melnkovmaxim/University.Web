@model IEnumerable<University.Models.Course>

@{
    foreach (var course in Model)
    {
        <tr>
            <td>@course.Name</td>
            <td>@course.Description</td>
            <td class="align-middle">
                <a type="submit" class="btn btn-primary" asp-controller="Group" asp-action="ShowByCourse" asp-route-id="@course.Id">Show groups</a>
            </td>
            <td class="align-middle">
                <form asp-controller="Course" asp-action="EditPage" asp-route-id="@course.Id" method="post">
                    <button type="submit" class="btn btn-warning">Edit</button>
                </form>
            </td>
            <td class="align-middle">
                <form asp-controller="Course" asp-action="RemoveCourse" asp-route-id="@course.Id" method="post"
                      data-ajax="true" data-ajax-update="#result">

                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
}

<script type="text/javascript">
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
    {
        <text>
            $(document).ready(function() {
                alert('@ViewData.ModelState["Error"].Errors.First().ErrorMessage');
            });
        </text>
    }
</script>